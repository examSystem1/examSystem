<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
        <action name="login" class="Login">
            <result name="success">main.jsp</result>
            <result name="error">index.jsp</result>
        </action>
        <action name="IExam" class="IExamAction" method="showExam">
            <result name="success">editPaper.jsp</result>
        </action>
        <action name="addExam" class="IExamAction" method="addExam">
            <result name="success">editTopic.jsp</result>
            <result name="error">main.jsp</result>
        </action>
        <action name="addTopic" class="ITopicAction" method="addTopic">
            <result name="success">editTopic.jsp</result>
            <result name="error">main.jsp</result>
        </action>
    </package>
</struts>